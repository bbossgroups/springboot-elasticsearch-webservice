                            @"""。=> \u0020sentence\u0020""",
                            @"""？=> \u0020sentence\u0020""",
                            @"""\n => \u0020sentence\u0020paragraph\u0020""",
                            @"""！=> \u0020sentence\u0020"""
                      ]
                    }
                  }
                }
                },
                "mappings": {
                "properties": {
                  "mainContent": {
